<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke
                android:width="1px"
                android:color="@color/silver" />
            <corners
                android:bottomLeftRadius="@dimen/spacing_small"
                android:bottomRightRadius="@dimen/spacing_small" />
        </shape>
    </item>

    <item
        android:left="1px"
        android:right="1px"
        android:bottom="@dimen/corner_radius">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
