<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Text colors -->
        <item name="android:textColorLink">@color/text_link</item>

        <!-- Status bar -->
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Text view -->
    <style name="AppTheme.NoExtraPadding">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <!-- Tweet action -->
    <style name="AppTheme.TweetActionItem">
        <item name="android:layout_width">@dimen/text_width_action_with_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:drawablePadding">@dimen/spacing_medium</item>
    </style>

    <!-- Navigation item -->
    <style name="AppTheme.NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_navigation</item>
        <item name="android:paddingStart">@dimen/drawer_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/spacing_2x_large</item>
        <item name="android:paddingEnd">@dimen/drawer_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:drawablePadding">@dimen/spacing_x_large</item>
        <item name="android:textSize">@dimen/text_size_2x_small</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

</resources>
