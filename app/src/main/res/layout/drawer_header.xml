<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/drawer_horizontal_margin"
    android:layout_marginEnd="@dimen/drawer_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <!-- TODO: Adjust margin vertical -->

    <!-- icon -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="@dimen/icon_size_list_item_tweet"
        android:layout_height="@dimen/icon_size_list_item_tweet"
        app:srcCompat="@drawable/default_profile" />

    <!-- name -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:maxLines="1"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        tools:text="name" />

    <!-- screen name -->
    <TextView
        android:id="@+id/profile_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l_small"
        android:maxLines="1"
        android:textSize="@dimen/text_size_l_small"
        tools:text="screen_name" />

    <!-- follow and follower -->
    <TextView
        android:id="@+id/profile_follow_and_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        tools:text="488フォロー  1,958フォロワー" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/spacing_x_large"
        android:background="@color/tw__light_gray" />

    <!-- profile -->
    <!-- TODO: Make drawable size larger -->
    <!-- TODO: Ripple effect -->
    <TextView
        android:id="@+id/profile_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_x_large"
        android:drawableStart="@drawable/profile"
        android:drawablePadding="@dimen/spacing_x_large"
        android:textSize="@dimen/text_size_medium"
        android:textColor="?android:textColorPrimary"
        android:text="@string/profile_link"
        tools:text="プロフィール" />

    <!-- TODO: Ripple effect -->
    <TextView
        android:id="@+id/tweet_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_x_large"
        android:drawableStart="@drawable/twitter"
        android:drawablePadding="@dimen/spacing_x_large"
        android:textSize="@dimen/text_size_medium"
        android:textColor="?android:textColorPrimary"
        android:text="@string/tweet_link"
        tools:text="ツイートする" />

    <!-- TODO: Ripple effect -->
    <TextView
        android:id="@+id/notification_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_x_large"
        android:drawableStart="@drawable/notification"
        android:drawablePadding="@dimen/spacing_x_large"
        android:textSize="@dimen/text_size_medium"
        android:textColor="?android:textColorPrimary"
        android:text="@string/notification_link"
        tools:text="通知" />

    <!-- TODO: Ripple effect -->
    <TextView
        android:id="@+id/support_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_x_large"
        android:drawableStart="@drawable/support"
        android:drawablePadding="@dimen/spacing_x_large"
        android:textSize="@dimen/text_size_medium"
        android:textColor="?android:textColorPrimary"
        android:text="@string/support_link"
        tools:text="お問い合わせ" />

    <!-- TODO: Ripple effect -->
    <TextView
        android:id="@+id/sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_x_large"
        android:paddingStart="@dimen/padding_start_sing_out"
        android:drawableStart="@drawable/sign_out"
        android:drawablePadding="@dimen/drawable_padding_sign_out"
        android:textSize="@dimen/text_size_medium"
        android:textColor="?android:textColorPrimary"
        android:text="@string/sign_out"
        tools:text="ログアウト" />

</LinearLayout>