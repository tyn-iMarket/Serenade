<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TODO: Set textColor @color/text_black or textColorPrimary -->

    <!-- TODO: Ripple Effect -->
    <!-- http://atamo-dev.hatenablog.com/entry/2017/03/01/180530 -->
    <LinearLayout
        android:id="@+id/retweet_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: Show retweet icon -->
        <ImageView
            android:id="@+id/retweet_by_user"
            android:layout_width="@dimen/icon_size_list_item_tweet"
            android:layout_height="wrap_content" />

        <!-- TODO: Reply to -->
        <TextView
            android:id="@+id/retweet_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginStart="@dimen/spacing_medium"
            android:maxLines="1"
            android:textSize="@dimen/text_size_2l_small"
            tools:text="ティンがリツイート" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tweet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retweet_container">

        <!-- TODO: Move to profile -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/icon_size_list_item_tweet"
            android:layout_height="@dimen/icon_size_list_item_tweet"
            app:srcCompat="@drawable/default_profile" />

        <LinearLayout
            android:id="@+id/nameContainer"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="0dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                tools:text="name" />

            <TextView
                android:id="@+id/screen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:maxLines="1"
                android:textSize="@dimen/text_size_small"
                tools:text="screen_name" />

            <TextView
                android:id="@+id/created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="1"
                tools:text="created_at" />
        </LinearLayout>

        <!-- TODO: show image, RT, link, hash tag -->
        <!-- TODO: Remove underline from links -->
        <!-- TODO: Widen between lines -->
        <!-- TODO: Effect when click a link -->
        <!-- TODO: Wide clickable link area -->
        <TextView
            android:id="@+id/tweet_text"
            android:layout_below="@+id/nameContainer"
            android:layout_toEndOf="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_l_medium"
            android:layout_marginStart="@dimen/spacing_medium"
            android:textSize="@dimen/text_size_x_small"
            android:textColor="@color/text_black"
            android:autoLink="web"
            tools:text="tweet_text" />

        <!-- TODO: quotedStatus View -->

        <!-- TODO: Movie -->
        <!-- TODO: Custom view? -->
        <!-- TODO: Boarder Radius -->
        <!-- TODO: http://www.viralandroid.com/2015/11/how-to-make-imageview-image-rounded-corner-in-android.html -->
        <!-- TODO: Multi image -->
        <!-- TODO: Must unfix layout_width -->
        <ImageView
            android:id="@+id/tweet_photo"
            android:layout_toEndOf="@+id/icon"
            android:layout_below="@+id/tweet_text"
            android:layout_width="@dimen/image_width_tweet_photo"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:scaleType="centerCrop"
            tools:src="@drawable/peing" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quoted_tweet_container"
        android:layout_below="@+id/tweet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_icon_and_margin">

        <TextView
            android:id="@+id/quoted_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/spacing_large"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            tools:text="quoted_name" />

        <TextView
            android:id="@+id/quoted_screen_name"
            android:layout_toEndOf="@+id/quoted_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/spacing_small"
            android:maxLines="1"
            android:textSize="@dimen/text_size_small"
            tools:text="quoted_screen_name" />

        <TextView
            android:id="@+id/quoted_tweet_text"
            android:layout_below="@+id/quoted_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/spacing_large"
            android:textColor="@color/text_black"
            android:autoLink="web"
            tools:text="quoted_tweet_text" />

        <ImageView
            android:id="@+id/quoted_tweet_photo"
            android:layout_below="@+id/quoted_tweet_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/spacing_large"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <!-- TODO: Larger size -->
    <RelativeLayout
        android:id="@+id/card_summary"
        android:layout_below="@+id/quoted_tweet_container"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_icon_and_margin"
        android:background="@drawable/shape_border">

        <!-- TODO: Corner radius -->
        <ImageView
            android:id="@+id/card_summary_image"
            android:layout_width="@dimen/image_size_summary_image"
            android:layout_height="@dimen/image_size_summary_image"
            android:scaleType="centerCrop"
            tools:src="@drawable/nhk" />

        <!-- TODO: Border -->
        <TextView
            android:id="@+id/card_summary_large_image_text"
            android:layout_width="@dimen/image_size_summary_image"
            android:layout_height="@dimen/image_size_summary_image"
            android:gravity="center"
            android:background="@color/white_smoke"
            android:textColor="@color/silver"
            tools:text="summary_large_image_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/card_summary_image"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/card_summary_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_medium"
                android:maxLines="2"
                android:textColor="@color/text_black"
                tools:text="summary_title" />

            <TextView
                android:id="@+id/card_summary_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_summary_title"
                android:paddingStart="@dimen/spacing_medium"
                android:textSize="@dimen/text_size_small"
                tools:text="summary_host" />

        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/slide_button"
        android:layout_below="@+id/card_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_icon_and_margin"
        android:visibility="gone"
        android:text="@string/slide_button" />

    <LinearLayout
        android:id="@+id/actions"
        android:orientation="horizontal"
        android:layout_below="@+id/slide_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_icon_and_margin"
        android:layout_marginEnd="0dp">

        <TextView
            android:id="@+id/reply"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            tools:text="reply" />

        <TextView
            android:id="@+id/retweet"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            tools:text="retweet" />

        <!-- TODO: Fav count -->
        <ImageView
            android:id="@+id/fav"
            app:srcCompat="@drawable/fav_off"
            android:layout_weight="1"
            android:layout_width="@dimen/icon_size_action_with_padding"
            android:layout_height="@dimen/icon_size_action_with_padding"
            android:padding="@dimen/spacing_medium" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/actions"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@color/light_gray"
        android:alpha="0.5" />
</RelativeLayout>
